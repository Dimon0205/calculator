
# kv_start
<ItemLabel@Label>:
    font_size: '15sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size

<CalcScreen>:
    rows: 3
    size_hint: 1, 1
    auto_dismiss: False
    title: 'Введите данные'

    text_input: text_input

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        TextInput:
            id: text_input
            font_size: '20sp'
            multiline: False
            input_type: 'number'



        Button:
            size_hint: 1, .5
            text: 'Закрыть'
            on_press:
                root.manager.current = root.manager.previous()

<Container>:
    rows: 5

    weight: weight
    parking_axes: parking_axes



    GridLayout:
        canvas:
            Color:
                rgb: 68/255.0, 164/255.0, 201/255.0
            Line:
                rectangle: self.x, self.y, self.width, self.height
        cols: 2
        size_hint: 1, 0.1
        padding: 30, 0
        BoxLayout:
            orientation: 'horizontal'
            ItemLabel:
                text: 'Вес:'
            ItemLabel:
                id: weight
                text: '0'

        BoxLayout:
            orientation: 'horizontal'
            ItemLabel:
                text: 'Оси'

            ItemLabel:
                id: axes
                text: '0'

    GridLayout:
        canvas:
            Color:
                rgb: 68/255.0, 164/255.0, 201/255.0
            Line:
                rectangle: self.x, self.y, self.width, self.height
        rows:2
        size_hint: 1, 0.2
        BoxLayout:
            orientation: 'horizontal'
            padding: [30, 0, 0, 0]
            ItemLabel:
                size_hint: 0.7, 1
                text: 'Требуемое тормозное нажатие:'

            ItemLabel:
